<h1>Edit Password</h1>
<%= form_with model: Current.user, url: password_path do |f| %>
  <p>
    <%= f.label 'New Password:' %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label 'New Password_Confirmation' %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>