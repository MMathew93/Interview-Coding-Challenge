<div class="tile is-ancestor mt-6">
  <div class="tile"></div>
  <div class="tile is-7">
    <div class="tile is-parent">
      <article class="tile is-child notification is-info">
        <p class="title">Sign Up</p>
        <%= form_with model: @user, url: registrations_path do |f| %>
        <div class="field">
          <%= f.label 'Email', class:"label" %>
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :email,type:"email", class:"input is-danger", placeholder:"Email input", value:"hello@" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-exclamation-triangle"></i>
            </span>
          </div>
          <p class="help is-danger">This email is invalid</p>
        </div>

        <div class="field">
          <%= f.label 'Username', class:"label" %>
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :username, class:"input is-success" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </div>
          <p class="help is-success">This username is available</p>
        </div>

        <div class="field">
          <%= f.label 'Password', class:"label" %>
          <div class="control">
            <%= f.password_field :password, class:"input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label 'Password_Confirmation', class:"label" %>
          <div class="control">
            <%= f.password_field :password_confirmation, class:"input" %>
          </div>
        </div>

        <div class="field is-grouped mt-5">
          <div class="control">
            <%= f.submit 'Sign Up', class:"button is-link" %>
          </div>
          <div class="control">
            <%= link_to 'Cancel', root_path, class:"button is-link is-light" %>
          </div>
        </div>
        <% end %>
      </article>
    </div>
  </div>
  <div class="tile"></div>
</div>