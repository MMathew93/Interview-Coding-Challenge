<% if alert %>
  <div class="alert notification is-danger">
    <button class="delete"></button>
    <%= alert %>
  </div>
<% elsif notice %>
  <div class="alert notification is-success">
    <button class="delete"></button>
    <%= notice %>
  </div>
<% end %>
<div class="tile is-ancestor mt-6">
  <div class="tile"></div>
  <div class="tile is-7">
    <div class="tile is-parent">
      <article class="tile is-child notification is-info">
        <p class="title">Log In</p>
        <%= form_with url: sessions_path do |f| %>
        <div class="field">
          <%= f.label 'Email:', class:"label" %>
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :email, id: 'email', class:"input", placeholder:"Email input", value:"hello@" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <%= f.label 'Password:', class:"label" %>
          <div class="control has-icons-left has-icons-right">
            <%= f.password_field :password, id: 'password', class:"input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-unlock-alt"></i>
            </span>
          </div>
<!--
          <div class="control is-grouped">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
            <%= link_to 'Forgot your password?', new_password_reset_path %>
          </div>
-->
        </div>
        <div class="field is-grouped is-grouped-centered mt-5">
          <div class="control">
            <%= f.submit 'Log In', class:"button is-link" %>
          </div>
          <div class="control">
            <%= link_to 'Cancel', root_path, class:"button is-link is-light" %>
          </div>
        </div>
        <% end %>
      </article>
    </div>
  </div>
  <div class="tile"></div>
</div>